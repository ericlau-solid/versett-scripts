{
  "name": "@versett/versett-scripts",
  "version": "0.0.0-semantically-released",
  "description": "Collection of scripts that are useful for V// projects.",
  "main": "index.js",
  "scripts": {
    "release": "yarn && node bin/index.js release --npm-publish",
    "test": "echo \"No tests were specified! Please write some tests.\"",
    "test:ci": "echo \"No tests were specified! Please write some tests.\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versett/versett-scripts.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/versett/versett-scripts/issues"
  },
  "homepage": "https://github.com/versett/versett-scripts#readme",
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "getLastRelease": "last-release-git"
  },
  "bin": {
    "versett-scripts": "bin/index.js"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "fs-extra": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.7.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-prettier": "^2.6.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node bin/index.js commitmsg ${HUSKY_GIT_PARAMS}",
      "pre-commit": "node bin/index.js precommit",
      "prepare-commit-msg": "node bin/index.js preparecommitmsg ${HUSKY_GIT_PARAMS}",
      "pre-push": "node bin/index.js prepush"
    }
  },
  "engines": {
    "node": "10.15.1",
    "npm": ">= 5.6.0",
    "yarn": "1.13.0"
  }
}
